<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.photon.UI.ActionScreenController"
      spacing="20" alignment="CENTER" style="-fx-background-color: linear-gradient(to bottom, #f0f4f7, #d9e4ea);">
    
    <!-- Pre-game timer displayed before game starts -->
    <VBox alignment="TOP_CENTER" spacing="10" style="-fx-padding: 20;">
        <Label fx:id="preGameTimerLabel" text="30" 
               style="-fx-font-size: 48; -fx-font-weight: bold; -fx-text-fill: #ff0000;" visible="false"/>
        <Label fx:id="timerLabel" text="06:00" 
               style="-fx-font-size: 32; -fx-font-weight: bold; -fx-text-fill: #0077cc;" visible="false"/>
    </VBox>

    <!-- Main content area with teams and actions -->
    <HBox spacing="40" alignment="CENTER" style="-fx-padding: 20;">
        <!-- Green Team -->
        <VBox fx:id="greenTeamBox" spacing="15" alignment="TOP_LEFT" 
              style="-fx-background-color: #e0f7e7; -fx-padding: 20; -fx-border-color: #006600; -fx-border-width: 2; -fx-border-radius: 10;">
            <Label text="Green Team" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #006600;"/>
            <!-- Green Team players will be dynamically added here -->
        </VBox>

        <!-- Play Action Section -->
        <VBox fx:id="playByPlayBox" alignment="CENTER" spacing="15"
              style="-fx-background-color: #f7f7f7; -fx-padding: 20; -fx-border-color: #cccccc; -fx-border-width: 2; -fx-border-radius: 10;">
            <Label text="Play Action" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
            <!-- Play action buttons can be added here later -->
        </VBox>

        <!-- Red Team -->
        <VBox fx:id="redTeamBox" spacing="15" alignment="TOP_RIGHT" 
              style="-fx-background-color: #f7e0e0; -fx-padding: 20; -fx-border-color: #cc0000; -fx-border-width: 2; -fx-border-radius: 10;">
            <Label text="Red Team" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #cc0000;"/>
            <!-- Red Team players will be dynamically added here -->
        </VBox>
    </HBox>

    <!-- Bottom area for print button -->
    <HBox alignment="BOTTOM_RIGHT" style="-fx-padding: 20;">
        <Button fx:id="printButton" text="Print Players" 
                style="-fx-background-color: #0077cc; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 5; -fx-padding: 10;" onAction="#print"/>
    </HBox>
</VBox>