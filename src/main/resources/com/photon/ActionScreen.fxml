<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.photon.UI.ActionScreenController" style="-fx-background-color: black; -fx-border-color: linear-gradient(to right, red, green); -fx-border-width: 10;">
    <children>
        <!-- 30-second timer label -->
        <Label fx:id="preGameTimerLabel" text="30" style="-fx-font-size: 100; -fx-font-weight: bold; -fx-text-fill: white;" visible="true"/>

        <!-- Main content area with teams and actions -->
        <HBox spacing="200" alignment="TOP_CENTER" style="-fx-padding: 20;" visible="false" fx:id="actionScreenContent">
            <!-- Green Team -->
            <VBox spacing="15" alignment="TOP_LEFT">
                <Label text="GREEN TEAM" style="-fx-font-size: 48; -fx-font-weight: bold; -fx-text-fill: white; -fx-font-family: 'Arial Black';"/>
                <VBox fx:id="greenTeamBox" spacing="5" alignment="TOP_LEFT">
                    <!-- Green Team players will be dynamically added here -->
                </VBox>
            </VBox>

            <!-- Red Team -->
            <VBox spacing="15" alignment="TOP_RIGHT">
                <Label text="RED TEAM" style="-fx-font-size: 48; -fx-font-weight: bold; -fx-text-fill: white; -fx-font-family: 'Arial Black';"/>
                <VBox fx:id="redTeamBox" spacing="5" alignment="TOP_RIGHT">
                    <!-- Red Team players will be dynamically added here -->
                </VBox>
            </VBox>
        </HBox>

        <!-- Bottom area for game timer -->
        <HBox alignment="BOTTOM_RIGHT" style="-fx-padding: 20;" fx:id="timerBox" visible="false">
            <Label fx:id="timerLabel" text="TIME REMAINING: 06:00" style="-fx-font-size: 32; -fx-font-weight: bold; -fx-text-fill: white;"/>
        </HBox>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
</VBox>